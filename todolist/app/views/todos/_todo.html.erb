<%= turbo_frame_tag dom_id(todo) do %>
<div class="card">
  <div class="card-body <%= todo.completed ? 'completed' : 'not-completed' %>">
    <%= todo.title %> </br>
    <div class="btn-group float-right">
      <%= link_to "Completed", update_completed_path(id: todo.id, todo: todo), class:'btn btn-secondary' %>
      <%= button_to "Delete", todo, method: :delete, class:' btn btn-danger' %>
    </div>
  </div>
</div>
<% end %>
